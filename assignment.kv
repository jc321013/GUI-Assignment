BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.4
            orientation: 'vertical'
            Button:
                text: 'List Items'
            Button:
                text: 'Hire Items'
            Button:
                text: 'Return Items'
            Button:
                text: 'Confirm'
            Button:
                text: 'Add New Item'


        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Rusty Bucket'
                    id: rusty_bucket
                    on_press: app.item_rustyBucket()
                Button:
                    text: 'Thermomix(TM-31), $25.5 is out'
                    id: thermo_mix
                    on_press: app.item_thermomix()
                Button:
                    text: 'Guitar(JTV-59), $12.95 is in'
                    on_press: app.item_Guitar()
                    id: guitar

            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Golf Cart(Tesla powered 250 turbo), $195 is out'
                    on_press: app.item_golfCart()
                    id: golf_cart
                Button:
                    text: 'AeroPress(great coffee maker), $5 is in'
                    on_press: app.item_AeroPress()
                    id: aero_press
                Label:
                    text: ''
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.1
        Label:
            text_size: self.size
            id: action_label
            text: 'Choose action from the left menu, then select items on the right'



