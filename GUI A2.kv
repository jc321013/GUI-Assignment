BoxLayout:
    orientation: 'vertical'
    id: mainBox
    Popup:
        id: popup
        title: "Add Item"
        on_parent:
            if self.parent == mainBox: self.parent.remove_widget(self)
        BoxLayout:
            id: inputs
            orientation: 'vertical'
            Label:
                text: 'Item Name: '
                height: '48dp'
            TextInput:
                id: addedName
                value: ''
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                text: 'Description: '
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: addedDescription
                value: ''
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                text: 'Price Per Day: '
                height: '48dp'
            TextInput:
                id: addedPrice
                value: ''
                height: '48dp'
                multiline: False
                write_tab: False
            Button:
                text: 'Save Item'
                on_release: app.press_save(addedName.text, addedDescription.text, addedPrice.text)
            Button:
                text: 'Cancel'
                on_release: app.press_cancel()
            Label:
                text: app.action_label
                id: popup_label
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.4
            orientation: 'vertical'
            Button:
                text: 'List Items'
                id: list_items
                on_press: app.list_items()
            Button:
                text: 'Hire Items'
                id: hire_item
                on_press: app.hiring_item()
                on_release: app.item_add()
            Button:
                text: 'Return Items'

            Button:
                text: 'Confirm'
                id: itemConfirm
            Button:
                id: addButton
                text: 'Add New item'
                on_release: app.press_add()

        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Rusty Bucket'
                    id: rusty_bucket
                    on_press: app.item_rustyBucket()
                Button:
                    text: 'Thermomix'
                    id: thermo_mix
                    on_press: app.item_thermomix()
                Button:
                    text: 'Guitar'
                    on_press: app.item_Guitar()
                    id: guitar

            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Golf Cart'
                    on_press: app.item_golfCart()
                    id: golf_cart
                Button:
                    text: 'AeroPress'
                    on_press: app.item_AeroPress()
                    id: aero_press
                Label:
                    text: ""
                    id: newItem





    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.1
        Label:
            text_size: self.size
            id: action_label
            text: app.action_label