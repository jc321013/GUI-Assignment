BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.4
            orientation: 'vertical'
            Button:
                text: 'List Items'
                id: list_items
                on_press: app.list_items()
            Button:
                text: 'Hire Items'
                id: hire_item
                on_press: app.hiring_item()
            Button:
                text: 'Return Items'
            Button:
                text: 'Confirm'
            Button:
                text: 'Add New Item'


        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Rusty Bucket'
                    id: rusty_bucket
                    on_press: app.item_rustyBucket()

                Button:
                    text: 'Thermomix'
                    id: thermo_mix
                    on_press: app.item_thermomix()
                Button:
                    text: 'Guitar'
                    on_press: app.item_Guitar()
                    id: guitar

            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Golf Cart'
                    on_press: app.item_golfCart()
                    id: golf_cart
                Button:
                    text: 'AeroPress'
                    on_press: app.item_AeroPress()
                    id: aero_press
                Label:
                    text: ''
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.1
        Label:
            text_size: self.size
            id: action_label
            text: 'Choose action from the left menu, then select items on the right'



