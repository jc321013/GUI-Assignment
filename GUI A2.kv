BoxLayout:
    orientation: 'vertical'
    id: mainBox
    Popup:
        id: popup
        title: "Add Item"
        on_parent:
            if self.parent == mainBox: self.parent.remove_widget(self)
        BoxLayout:
            id: inputs
            orientation: 'vertical'
            Label:
                text: 'Item Name: '
                height: '48dp'
            TextInput:
                id: addedName
                value: ''
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                text: 'Description: '
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: addedDescription
                value: ''
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                text: 'Price Per Day: '
                height: '48dp'
            TextInput:
                id: addedPrice
                value: ''
                height: '48dp'
                multiline: False
                write_tab: False
            Button:
                text: 'Save Item'
                on_release: app.press_save(addedName.text, addedDescription.text, addedPrice.text)
            Button:
                text: 'Cancel'
                on_release: app.press_cancel()
            Label:
                text: app.action_label
                id: popup_label
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.4
                Button:
                    text: 'List Items'
                    id: list_items
                    state: 'down'
                    on_release: app.list_items()
                Button:
                    text: 'Hire Items'
                    id: hire_item
                    on_release: app.hiring_item()
                Button:
                    text: 'Return Items'
                    id: returnItem
                    on_release: app.return_item()
                Button:
                    text: 'Confirm'
                    id: itemConfirm
                    on_release: app.confirm_item()
                Button:
                    id: addButton
                    text: 'Add New item'
                    on_release: app.press_add()
                GridLayout:
                    orientation: 'vertical'
                    text: ""
                    id: experiment_hire
                    cols: 2
        Label:
            size_hint_y: 0.1
            text_size: self.size
            id: action_label
            text: app.action_label